{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "AVD Health Monitor",
  "version": "0.5.1",
  "identifier": "com.avd.health-monitor",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "AVD Health Monitor",
        "width": 700,
        "height": 700,
        "minWidth": 500,
        "minHeight": 600,
        "visible": false,
        "decorations": true,
        "resizable": true,
        "center": true,
        "skipTaskbar": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' data:; connect-src 'self' ipc: http://ipc.localhost https://ipc.localhost"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "publisher": "Sebastian Wild",
    "resources": [
      "resources/*.json"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
